@model MouratoAirport.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = null;
}

<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>Airport Mourato - Forgot Password</title>
    <link rel="stylesheet" href="~/css/Changepassword.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <form method="post">

        <div class="wrapper">
            <img src="~/images/logo2-min.png">
            <h1>Change Password</h1>
            <h3>Insert your Email</h3>
            <div class="inputs">

                <div class="field">
                    <span class="material-icons">email</span>
                    <input asp-for="Username" type="email" placeholder="Insert your email" required style="width: 250px;height: 30px;outline: none;border: none;border-radius: 0.3rem;padding-left: 35px;">
                </div>

                <h3>New password</h3>

                <div class="field">
                    <span class="material-icons">lock</span>
                    <input asp-for="Password" type="text" placeholder="Insert new password">
                    <span asp-validation-for="Password"></span>
                </div>

                <h3>Confirm new password</h3>
                <div class="field">
                    <span class="material-icons">lock</span>
                    <input asp-for="ConfirmPassword" type="text" placeholder="Confirm new password">
                </div>
                <button type="submit">Change Password</button>
                <span asp-validation-for="ConfirmPassword"></span>


            </div>
            <div class="link1">
                <p>Back To <a asp-action="Index" asp-controller="Home">Home.</a></p>
            </div>
        </div>

    </form>
</body>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }