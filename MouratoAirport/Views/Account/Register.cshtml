@model MouratoAirport.Models.RegisterNewUserViewModel

@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/Login.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" />

    <title>Mourato Airport | Register</title>

</head>
<body>

    <form method="post">

        <div class="box">
            <div class="container">

                <div class="top">
                    <header>Register</header>
                </div>

                <div class="input-field">
                    <input asp-for="FirstName" type="text" class="input" placeholder="First Name" id="">
                    <i class="fa-solid fa-user"></i>
                </div>

                <div class="input-field">
                    <input asp-for="LastName" type="text" class="input" placeholder="Last Name" id="">
                    <i class="fa-solid fa-user"></i>
                </div>

                <div class="input-field">
                    <input asp-for="Username" type="text" class="input" placeholder="Username" id="">
                    <i class="fa-solid fa-user"></i>
                </div>

                <div class="input-field">
                    <input asp-for="Password" type="Password" class="input" placeholder="Password" id="">
                    <i class="fa-solid fa-lock"></i>
                </div>


                <div class="input-field">
                    <input asp-for="Confirm" type="Password" class="input" placeholder="Re-Enter Password" id="">
                    <i class="fa-solid fa-lock"></i>
                </div>

                <div class="input-field">
                    <input type="submit" class="submit" value="Register" id="">
                </div>
            </div>
        </div>
    </form>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}