@model MouratoAirport.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "ChangePassword";
    Layout = null;
}

<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>Airport Mourato - Forgot Password</title>
    <link rel="stylesheet" href="~/css/Changepassword.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <form method="post">

        <div class="wrapper">
            <img src="~/images/logo2-min.png">
            <h1>Change Password</h1>
            <h3>Insert old password</h3>
            <div class="inputs">
                <div class="field">
                    <span class="material-icons">lock</span>
                    <input asp-for="OldPassword" type="text" placeholder="Insert old password">
                </div>

                <h3>Insert new password</h3>
                <div class="field">
                    <span class="material-icons">lock</span>
                    <input asp-for="NewPassword" type="text" placeholder="Insert new password">
                </div>
                <button type="submit">Change Password</button>
            </div>
            <div class="link1">
                <p>Back To <a asp-action="Index" asp-controller="Home">Home.</a></p>
            </div>
        </div>

    </form>
</body>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }