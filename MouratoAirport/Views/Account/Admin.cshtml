@model MouratoAirport.Models.IndexAdminViewModel
@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="~/css/Admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" />
</head>

<body>

    <section id="menu">
        <div class="logo">
            <img src="~/images/logo2-min.png" alt="">
            <h2>Airport Mourato</h2>
        </div>

        <div class="items">
            <li><i class="fa-solid fa-chart-pie"></i><a asp-action="Admin" asp-controller="Account">Dashboard</a></li>
            <li><i class="fa-solid fa-plane"></i><a asp-action="Index" asp-controller="Airplanes">Airplanes</a></li>
            <li><i class="fa-solid fa-arrow-right-from-bracket"></i><a href="#">Logout</a></li>
        </div>
    </section>

    <section id="interface">
        <div class="navigation">
            <div class="n1">
                <div class="search">
                    <i class="fa-solid fa-magnifying-glass"></i>
                    <input type="text" placeholder="Search">
                </div>
            </div>

            <div class="profile">
                <i class="fa-solid fa-bell"></i>
                <img src="~/images/logo2-min.png" alt="">
            </div>
        </div>

        <h3 class="i-name">Dashboard</h3>

        <div class="values">
            <div class="val-box">
                <i class="fa-solid fa-user"></i>
                <div>
                    <h3><a asp-action="AdminAdd" asp-controller="Account" style="text-decoration: none;outline: none;color: #081a29;">Add</a></h3>
                    <span>New Staff</span>
                </div>
            </div>
        </div>

        <dir class="boardadmin">
            <table width="100%">
                <thead>
                    <tr>
                        <td>Full Name</td>
                        <td>Username</td>
                        <td></td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model.User)
                    {
                    <tr>
                        <td>
                            <div class="admin-de">
                                <h5>@item.FullName</h5>
                            </div>
                        </td>

                        <td class="admin-de">
                            <h5>@item.Email</h5>
                        </td>

                        <td class="edit"><a asp-route-id="@item.UserId" asp-action="Edit">Edit</a></td>

                            <td class="edit"><a asp-route-id="@item.UserId" asp-action="Delete">Remove</a></td>

                    </tr>
                    }
                </tbody>
            </table>
        </dir>

    </section>

</body>